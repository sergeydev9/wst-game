FROM node:14-alpine
WORKDIR /app

ENV NODE_ENV=production
ENV PORT=4001

COPY dist/apps/socket-server/package.json .
RUN npm install && \
    # not in package.json generated by `nx build` but needed \
    npm install pg@^8.6.0 tslib@^2.0.0 pino-pretty@^5.1.3 pg-format@^1.0.4

COPY dist/apps/socket-server/* .

EXPOSE ${PORT}
CMD [ "node", "main.js" ]
