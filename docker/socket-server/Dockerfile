FROM node:14-alpine
WORKDIR /app

ENV NODE_ENV=production
ENV PORT=4001

COPY dist/apps/socket-server/package.json .
RUN npm install && \
    npm install pg@^8.6.0 tslib@^2.0.0 # not in package.json generated by `nx build` but needed

COPY dist/apps/socket-server/* .

EXPOSE ${PORT}
CMD [ "node", "main.js" ]
